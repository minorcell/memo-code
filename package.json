{
    "name": "memo-cli",
    "type": "module",
    "private": true,
    "scripts": {
        "start": "bun run packages/cli/src/index.tsx",
        "build": "bun build packages/cli/src/index.tsx --target bun --outdir dist --minify",
        "build:binary": "bun build packages/cli/src/index.tsx --target=bun --compile --outfile=memo",
        "format": "bunx prettier --write .",
        "format:check": "bunx prettier --check .",
        "test": "bun test",
        "test:core": "bun run --filter @memo/core test",
        "test:tools": "bun run --filter @memo/tools test",
        "test:cli": "bun run --filter @memo/cli test",
        "test:all": "bun run test:core && bun run test:tools && bun run test:cli",
        "ci": "bun run format:check && bun run test:core && bun run test:tools && bun run build",
        "ci:fix": "bun run format && bun run test:core && bun run test:tools && bun run build"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@types/bun": "latest",
        "prettier": "^3.3.3"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@dqbd/tiktoken": "^1.0.22",
        "@modelcontextprotocol/sdk": "^1.24.3",
        "openai": "^6.10.0",
        "react-devtools-core": "^7.0.1",
        "toml": "^3.0.0"
    }
}
